---
import Card from "./Card.astro";

const lang = (Astro.currentLocale || 'en') as 'en' | 'zh';

const translations = {
	en: {
		greeting: "Hello, my name is",
		intro: "I am a",
		living: "living in",
		blogAbout: "My blog is about:",
		skillsTitle: "My skills are:",
		name: "Jun Guo",
		city: "Montreal, Canada",
		occupation: "Software Engineer",
		hobbies: ["AI", "Software Engineering", "Web3", "Blockchain", "Fintech"],
		skills: [
			"JavaScript",
			"TypeScript",
			"Rust",
			"Python",
			"Go",
			"React",
			"Node.js",
			"AI engineering",
		],
	},
	zh: {
		greeting: "你好，我是",
		intro: "我是一位热爱探索新技术、不断创新的",
		living: "目前定居在",
		blogAbout: "在这里，我分享关于以下领域的见解与思考：",
		skillsTitle: "我的专长包括：",
		name: "郭俊",
		city: "加拿大,蒙特利尔",
		occupation: "软件工程师",
		hobbies: ["人工智能", "软件工程", "Web3", "区块链", "金融科技"],
		skills: [
			"JavaScript",
			"TypeScript",
			"Rust",
			"Python",
			"Go",
			"React",
			"Node.js",
			"AI工程",
		],
	},
};

const t = translations[lang];
---

<Card id="main" class="flex flex-col gap-6">
	<div class="mb-4">
		<h1 class="text-3xl font-extrabold text-blue-600 mb-2">
			{t.greeting}
			<span class="text-gray-900 dark:text-gray-100">{t.name}</span>
		</h1>
		<p class="text-lg text-gray-600 dark:text-gray-300 mb-2">
			{t.intro}
			<span class="font-semibold">{t.occupation}</span>
			{t.living}
			<span class="font-semibold">{t.city}</span>
		</p>
	</div>
	<div class="mb-4">
		<h2 class="text-xl font-semibold text-blue-500 mb-1">{t.blogAbout}</h2>
		<ul class="list-disc list-inside space-y-1 pl-2">
			{
				t.hobbies.map((hobby) => (
					<li class="text-base text-gray-700 dark:text-gray-300">{hobby}</li>
				))
			}
		</ul>
	</div>
	<div>
		<h2 class="text-xl font-semibold text-blue-500 mb-1">{t.skillsTitle}</h2>
		<ul class="flex flex-wrap gap-2">
			{
				t.skills.map((skill) => (
					<li class="bg-blue-100 dark:bg-blue-800 text-blue-700 dark:text-blue-200 px-3 py-1 rounded-full text-sm font-medium shadow-sm">
						{skill}
					</li>
				))
			}
		</ul>
	</div>
</Card>
