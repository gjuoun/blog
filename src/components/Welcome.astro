---
import Card from "./Card.astro";

const identity = {
	name: "Jun Guo",
	city: "Montreal, Canada",
	occupation: "Software Engineer",
	hobbies: ["AI", "Software Engineering", "Web3", "Blockchain", "Fintech"],
};

const skills = [
	"JavaScript",
	"TypeScript",
	"Rust",
	"Python",
	"Go",
	"React",
	"Node.js",
	"AI engineering",
];
---

<Card id="main" class="flex flex-col gap-6">
	<div class="mb-4">
		<h1 class="text-3xl font-extrabold text-blue-600 mb-2">
			Hello, my name is <span class="text-gray-900 dark:text-gray-100"
				>{identity.name}</span
			>
		</h1>
		<p class="text-lg text-gray-600 dark:text-gray-300 mb-2">
			I am a <span class="font-semibold">{identity.occupation}</span> living in <span
				class="font-semibold">{identity.city}</span
			>
		</p>
	</div>
	<div class="mb-4">
		<h2 class="text-xl font-semibold text-blue-500 mb-1">My blog is about:</h2>
		<ul class="list-disc list-inside space-y-1 pl-2">
			{
				identity.hobbies.map((hobby) => (
					<li class="text-base text-gray-700 dark:text-gray-300">{hobby}</li>
				))
			}
		</ul>
	</div>
	<div>
		<h2 class="text-xl font-semibold text-blue-500 mb-1">My skills are:</h2>
		<ul class="flex flex-wrap gap-2">
			{
				skills.map((skill) => (
					<li class="bg-blue-100 dark:bg-blue-800 text-blue-700 dark:text-blue-200 px-3 py-1 rounded-full text-sm font-medium shadow-sm">
						{skill}
					</li>
				))
			}
		</ul>
	</div>

</Card>
