---
import clsx from "clsx";

export interface Props {
  class?: string;
  id?: string;
  prose?: boolean;
  grid?: boolean;
}

const { class: className, id, prose = false, grid = false, ...props } = Astro.props;

const finalClasses = clsx(
  "max-w-xl mx-auto mt-12 p-8 bg-white dark:bg-gray-900 rounded-xl shadow-lg",
  {
    "prose dark:prose-invert": prose,
    "grid grid-flow-row gap-4": grid,
  },
  className
);
---

<div class={finalClasses} id={id} {...props}>
  <slot />
</div>